{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017"],
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@codeshift/*": ["../packages/*/src", "../packages/reusable-transforms"]
    }
  },
  "include": ["packages/**/*", "community/**/*", ".tmp/**/*", "scripts"],
  "exclude": [
    "node_modules", //
    "dist",
    "**/dist",
    "__tests__",
    "**/*.test*",
    "**/*.spec*",
    "*.tmp"
  ]
}
